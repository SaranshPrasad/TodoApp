<%- include('./partials/header.ejs') %>

<body>


    <div class="container">
        
        <div class="todo-web">
           
                <h1 class="title">My Todo Web Application </h1>

                <form action="/" method="POST">
                    
                    <input type="text" name="task" id="task" placeholder="Add your task here !" class="inputField" autofocus>
                    <input type="submit" value="Add" id="btn">
                </form>
            
          
        
            <div class="todo-app">
         
                <ul id="items" >
                    <% todoTasks.forEach(item => { %>
                        <li>
                          <%= item.text %>
                          <form action="/<%= item.id %>" method="post">
                            <button type="submit">X</button>
                          </form>
                        </li>
                      <% }); %>
                   
                  
                </ul>
            </div>
        </div>
      
    </div>
    <%- include('./partials/footer.ejs') %>

